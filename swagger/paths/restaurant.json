{
    "paths": {
        "/restaurants/{restaurant}": {
            "get": {
                "summary": "Página inicial de um restaurante especifico",
                "tags": ["Restaurant"],
                "parameters": [
                    {
                        "name": "restaurant",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "500": {
                        "description": "Algum erro na execução do codigo"
                    }
                }
            }
        },
        "/restaurants/{restaurant}/search": {
            "get": {
                "summary": "Filtra e ordena menus do restaurante",
                "tags": ["Restaurant"],
                "parameters": [
                    {
                        "name": "restaurant",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    },
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Filtrar por nome do menu",
                        "schema": { "type": "string" }
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Filtrar por tipo de menu",
                        "schema": { "type": "string" }
                    },
                    {
                        "name": "order",
                        "in": "query",
                        "description": "Ordenação (ex: nameAsc, nameDesc)",
                        "schema": { "type": "string" }
                    }
                ],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "responses": {
                    "200": { "description": "OK" },
                    "403": { "description": "Acesso não autorizado" },
                    "404": { "description": "Nenhum menu encontrado" }
                }
            }
        }
    }
}