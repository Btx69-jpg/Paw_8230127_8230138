{
    "paths": {
        "/perfil/admin/listPortions": {
            "get": {
                "summary": "Carrega a página com a lista de porções do site",
                "tags": [ "Admin/Porçõs" ],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "responses": {
                    "200": { "description": "OK"},
                    "403": { "description": "Não tem permissão para aceder a esta página"},
                    "404": { "description": "Não foi encontrado nenhuma porção  "}
                }
            }
        },
        "/perfil/admin/listPortions/search": {
            "get": {
                "summary": "Carrega a página com a lista de porções, filtrada ",
                "tags": [ "Admin/Porçõs" ],
                "parameters": [
                    {
                        "name": "portion",
                        "in": "query",
                        "required": false,
                        "description": "Filtra uma porção pelo nome",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "order",
                        "in": "query",
                        "required": false,
                        "description": "Criterio de ordenação das porções",
                        "schema": {
                            "type": "string",
                            "enum": ["no", "nameAsc", "nameDesc"]
                        }
                    }
                ],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "responses": {
                    "200": { "description": "OK"},
                    "403": { "description": "Não tem permissão para aceder a esta página"},
                    "404": { "description": "Não foi encontrado nenhuma porção  "}
                }
            }
        },
        "/perfil/admin/listPortions/createPortion": {
            "get": {
                "summary": "Página para criação de uma nova Porção",
                "tags": ["Admin/Porçõs"],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "403": {
                        "description": "Falta de autorização para aceder há página"
                    },
                    "500": {
                        "description": "Algum erro na execução do codigo"
                    }
                }
            }
        },
        "/perfil/admin/listPortions/savePortion": {
            "post": {
                "summary": "Página que guarda uma nova Porção",
                "tags": ["Admin/Porçõs"],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                   "portion": {
                                        "type": "string",
                                        "maxLength": 50,
                                        "patttern": "^[A-Za-zÀ-ÿ\\s]+$",
                                        "description": "Nome do porção (até 50 caracteres)",
                                        "default": ""
                                    }
                                },
                                "required": [
                                    "portion"
                                ]
                            }
                        }
                    },
                    "responses": {
                        "200": { "description": "Ok"},
                        "403": { "description": "Falta de autorização para aceder há página"},
                        "500": { "description": "Erro interno" }
                    }
                }
            }
        }, 
        "/perfil/admin/listPortions/deletetPortion/{portionId}": {
            "post": {
                "summary": "Elimina definitivamente uma porção",
                "tags": [ "Admin/Porçõs" ],
                "parameters": [
                    {
                        "name": "portionId",
                        "in": "path",
                        "required": true,
                        "description": "Id da Porção a eliminar",
                        "schema": {
                        "type": "string"
                        }
                    }
                ],
                "security": [ { "tokenCookie": [], "priorityCookie": [] }], 
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "403": {
                        "description": "Falta de autorização para aceder há página"
                    },
                    "500": {
                        "description": "Algum erro na execução do codigo"
                    }
                }
            }
        },
        "/perfil/admin/listPortions/editPortion/{portionId}": {
            "get": {
                "summary": "Página para atualizar o nome de uma porção",
                "tags": ["Admin/Porçõs"],
                "parameters": [
                    {
                        "name": "portionId",
                        "in": "path",
                        "required": true,
                        "description": "ID da porção a atualizar",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }], 
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "403": {
                        "description": "Falta de autorização para aceder há página"
                    },
                    "500": {
                        "description": "Algum erro na execução do codigo"
                    }
                }
            }
        },
        "/perfil/admin/listPortions/updatPortion/{portionId}": {
            "post": {
                "summary": "Atualiza o nome de uma porção",
                "tags": ["Admin/Porçõs"],
                "parameters": [
                    {
                        "name": "portionId",
                        "in": "path",
                        "required": true,
                        "description": "ID da porção a atualizar",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "portion": {
                                        "type": "string",
                                        "maxLength": 50,
                                        "patttern": "^[A-Za-zÀ-ÿ\\s]+$",
                                        "description": "Nome do porção (até 50 caracteres)",
                                        "default": ""
                                    }
                                },
                                "required": [
                                    "portion"
                                ]
                            }
                        }
                    },
                    "responses": {
                        "200": { "description": "Ok" },
                        "403": { "description": "Falta de autorização para aceder há página" },
                        "500": { "description": "Erro interno" }
                    }
                }
            }
        }
    }
}