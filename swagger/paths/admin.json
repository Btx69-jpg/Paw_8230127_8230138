{
    "paths": {
        "/perfil/admin": {
            "get": {
                "summary": "Carrega a página de perfil do admin",
                "tags": [ "Admin" ],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "responses": {
                    "200": { "description": "OK"},
                    "403": { "description": "Não tem permissão para aceder a esta página"},
                    "404": { "description": "O admin não foi encontrado"}
                }
            }
        },
        "/perfil/admin/editDados/{adminId}": {
            "get": {
                "summary": "Carrega a página de perfil do admin",
                "tags": [ "Admin" ],
                "parameters": [
                    {
                        "name": "adminId",
                        "in": "path",
                        "required": true,
                        "description": "ID do admin a editar",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "responses": {
                    "200": { "description": "OK"},
                    "403": { "description": "Não tem permissão para aceder a esta página"},
                    "404": { "description": "O admin não foi encontrado"}
                }
            }
        },
        "/perfil/admin/updateAdmin/{adminId}": {
            "post": {
                "summary": "Carrega a página de perfil do admin",
                "tags": [ "Admin" ],
                "parameters": [
                    {
                        "name": "adminId",
                        "in": "path",
                        "required": true,
                        "description": "ID do admin a atualizar",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "firstName": {
                                        "type": "string",
                                        "pattern": "^[A-Za-zÀ-ÿ\\s]+$",
                                        "description": "Primeiro nome do admin"
                                    },
                                    "lastName": {
                                        "type": "string",
                                        "pattern": "^[A-Za-zÀ-ÿ\\s]+$",
                                        "description": "Último nome do admin"
                                    },
                                    "phoneNumber": {
                                        "type": "tel",
                                        "pattern": "^\\+?[0-9]$",
                                        "description": "Número de telefone (9 dígitos)"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "pattern": "^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}$",
                                        "maxLength": 50,
                                        "description": "Email válido (até 50 caracteres)"
                                    },
                                    "perfilPhoto": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Foto do restaurante"
                                    }
                                },
                                "required": ["firstName", "lastName", "phoneNumber", "email"]
                            }
                        }
                    },
                    "responses": {
                        "200": { "description": "OK"},
                        "403": { "description": "Não tem permissão para aceder a esta página"},
                        "404": { "description": "O admin não foi encontrado"}
                    }
                }
            }
        },
        "login/logout": {
            "get": {
                "summary": "Carrega a página de perfil do admin",
                "tags": [ "Admin" ],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "responses": {
                    "200": { "description": "OK"},
                    "500": { "description": "Erro interno"}
                }
            }
        },
        "/perfil/admin/deleteAccount/{adminId}": {
            "post": {
                "summary": "Elimina a conta do admin do site",
                "tags": [ "Admin" ],
                "parameters": [
                    {
                        "name": "adminId",
                        "in": "path",
                        "required": true,
                        "description": "ID do admin a ser eliminado permanentemente",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "security": [{ "tokenCookie": [], "priorityCookie": [] }],
                "responses": {
                    "200": { "description": "OK"},
                    "403": { "description": "Não tem permissão para aceder a esta página"},
                    "404": { "description": "O admin não foi encontrado "}
                }
            }
        }
    }
}