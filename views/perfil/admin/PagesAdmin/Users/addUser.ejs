<!DOCTYPE html>
<html lang="pt-PT">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/images/Plataform/LogoSite/logo.png" />
    <title>Criar conta</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >
    <!-- CSS inline ou ficheiro externo -->
    <link rel="stylesheet" href="/stylesheets/Perfils/Admin/PagesAdmin/Users/editUser.css">
  </head>
  <body>
    <main>
      <div class="signup-container">
        <h1>Criar conta</h1>
        <form
          action="/perfil/admin/listUsers/createUser"
          method="POST"
          id="signupForm"
          class="needs-validation"
          novalidate
        >
          <%- include('../../../../login/signUpCampos') %>

          <!-- Select de prioridade -->
          <div class="form-group mb-3" id="divPrioridade">
            <label for="priority">Prioridade</label>
            <select
              id="priority"
              name="priority"
              class="form-control"
              onchange="inputDono()"
              required
            >
              <option value="Cliente">Cliente</option>
              <option value="Admin">Admin</option>
              <option value="Dono">Dono</option>
              <option value="Funcionario">Funcionario</option>
            </select>
          </div>

          <!-- Wrapper de restaurantes: escondido por defeito -->
          <div id="restaurantsWrapper" style="display: none">
            <!-- Container vazio: será populado pelo JS -->
            <div id="restaurantsContainer"></div>

            <button
              type="button"
              class="btn btn-primary mt-2 mb-4"
              onclick="addRestaurant()"
            >
              Adicionar restaurante
            </button>
          </div>

          <!-- Botão de submissão -->
          <button type="submit" class="btn btn-success mb-3">Criar</button>

          <!-- Botões auxiliares -->
          <div class="d-grid gap-2">
            <a href="/perfil/admin/listUsers" class="btn btn-secondary">Voltar</a>
            <a href="/perfil/admin/listUsers/createUser" class="btn btn-secondary">Limpar</a>
          </div>
        </form>
      </div>
    </main>

    <!-- Scripts JS -->
    <script src="/javascripts/Admin/PagesAdmin/Users/inputDono.js"></script>
    <script src="/javascripts/Admin/PagesAdmin/Users/RestaurantsDonoAdd.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
