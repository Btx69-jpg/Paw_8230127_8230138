<% if(user !== null & user.perfil.priority === "Admin") { %>
<!DOCTYPE html>
<html lang="pt-PT">
  <head>
    <meta charset="UTF-8">
    <title>Lista de Restaurantes</title>

    <!-- Logo do site -->
    <link rel="icon" type="image/png" href="/images/Plataform/LogoSite/logo.png" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/Perfils/navBar.css">
    <link rel="stylesheet" href="/stylesheets/Perfils/lists.css">
  </head>

  <body>
    <%- include('../../navBar') %>

    <div class="container">
      <h1 class="text-center my-4">Lista de restaurantes</h1>

      <div class="d-flex justify-content-center mb-4">
        <a href="/perfil/admin/listRestaurants/createRestaurant" class="btn btn-success">Adicionar Restaurante</a>
      </div>
      <% if (restaurants.length > 0) { %>
        <div class="row justify-content-center">

          <div class="d-flex justify-content-center mb-4">
            <form action="/perfil/admin/listRestaurants/aproves" method="GET">
              <a href="/perfil/admin/listRestaurants/aproves" class="btn btn-success">Aprovar Restaurantes</a>
            </form>
          </div>
          <% for(let i = 0; i < restaurants.length; i++) { %>
            <div class="col-md-4 mb-4">
              <div class="restaurant-card text-center border rounded p-3 shadow-sm">
                <img src="<%=restaurants[i].perfil.perfilPhoto%>" alt="Logo do restaurante" class="img-fluid mb-3 rounded">
                <h5 class="mb-3"><%= restaurants[i].name %></h5>

                <div class="btn-group d-flex justify-content-center">
                  <form action="/listRestaurants/deleteRestaurant/<%= restaurants[i].name %>" method="POST">
                    <button type="submit" class="btn btn-danger">Remover</button>
                  </form>
                  
                  <form action="/listRestaurants/editRestaurant/<%= restaurants[i]._id %>" method="GET">
                    <button type="submit" class="btn btn-primary">Editar</button>
                  </form>
                </div>

                <p class="mt-3">
                  <a href="/perfil/listRestaurants/<%= restaurants[i].name %>" class="text-decoration-none">Mais Info.</a>
                </p>
              </div>
            </div>
          <% } %>
        </div>
      <% } else { %>
        <p class="text-center">Ainda sem restaurantes</p>
      <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
<% } else {%>
  <%- include('../../../errors/error404')%>
<% }%>