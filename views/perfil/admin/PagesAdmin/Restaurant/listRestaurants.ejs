<!DOCTYPE html>
<html lang="pt-PT">
  <head>
    <meta charset="UTF-8">
    <title>Lista de Restaurantes</title>

    <!-- Logo do site -->
    <link rel="icon" type="image/png" href="/images/Plataform/LogoSite/logo.png" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/Perfils/navBar.css">
    <link rel="stylesheet" href="/stylesheets/Perfils/lists.css">
  </head>

  <body>
    <%- include('../../navBar') %>

    <div class="container">
      <h1 class="text-center my-4">Lista de restaurantes</h1>

      <div class="d-flex justify-content-center mb-4">
        <a href="/perfil/admin/listRestaurants/createRestaurant" class="btn btn-success">Adicionar Restaurante</a>
      </div>
      <% if (restaurants.length > 0) { %>
        <div class="row justify-content-center">

          <% if(desaprove === true) { %>
            <div class="d-flex justify-content-center mb-4">
              <form action="/perfil/admin/listRestaurants/aproves" method="GET">
                <a href="/perfil/admin/listRestaurants/aproves" class="btn btn-success">Aprovar Restaurantes</a>
              </form>
            </div>
          <% } %>

          <div class="row justify-content-center align-items-center mb-4">
            <form action="/perfil/admin/listRestaurants/search" method="GET" class="col-md-8 col-lg-6">
              
              <div class="row g-2">
                
                <div class="col-sm-6">
                  <label for="name" class="form-label">Nome restaurante:</label>
                  <input type="text" 
                        name="name" 
                        id="name"
                        placeholder="Introduza o nome do restaurante"
                        class="form-control form-control-sm" 
                        maxlength="100" 
                        pattern="^(?!.*[\\/]).+$"
                        title="O nome não pode conter os caracteres '/' ou '\'">
                </div>
    
                <div class="col-sm-6">
                  <label for="city" class="form-label">Cidade:</label>
                  <input type="text" 
                          name="city" 
                          id="city" 
                          class="form-control form-control-sm" 
                          placeholder="Introduza o nome da sua cidade"
                          maxlength="100" 
                          pattern="^[A-Za-zÀ-ÿ\s]+$"
                          title="Apenas letras e espaços">
                </div>
              </div>
              
              <div class="mt-3 d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
                <a href="/perfil/admin/listRestaurants/" class="btn btn-secondary btn-sm">Clear</a>
              </div>
            </form>
          </div>

          <% for(let i = 0; i < restaurants.length; i++) { %>
            <div class="col-md-4 mb-4">
              <div class="restaurant-card text-center border rounded p-3 shadow-sm">
                <img src="<%=restaurants[i].perfil.perfilPhoto%>" alt="Logo do restaurante" class="img-fluid mb-3 rounded">
                <h5 class="mb-3"><%= restaurants[i].name %></h5>

                <div class="btn-group d-flex justify-content-center">
                  <form action="/perfil/admin/listRestaurants/deleteRestaurant/<%= restaurants[i].name %>" method="POST">
                    <button type="submit" class="btn btn-danger">Remover</button>
                  </form>
                  
                  <form action="/perfil/admin/listRestaurants/editRestaurant/<%= restaurants[i]._id %>" method="GET">
                    <button type="submit" class="btn btn-primary">Editar</button>
                  </form>
                </div>

                <p class="mt-3">
                  <a href="/perfil/listRestaurants/<%= restaurants[i].name %>" class="text-decoration-none">Mais Info.</a>
                </p>
              </div>
            </div>
          <% } %>
        </div>
      <% } else { %>
        <p class="text-center">Ainda sem restaurantes</p>
      <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>