<!DOCTYPE html>
<html lang="pt-PT">
  <head>
    <meta charset="UTF-8">
    <title>Lista de Restaurantes</title>

    <!-- Logo do site -->
    <link rel="icon" type="image/png" href="/images/Plataform/LogoSite/logo.png" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/Perfils/navBar.css">
    <link rel="stylesheet" href="/stylesheets/Perfils/lists.css">
    <link rel="stylesheet" href="/stylesheets/Perfils/Restaurants/restaurantsPage.css">
  </head>

  <body>
    <%- include('../../navBar') %>

    <div class="container">
      <h1 class="text-center my-4">Lista de restaurantes</h1>

      <div class="d-flex justify-content-center mb-4">
        <a href="/perfil/admin/listRestaurants/createRestaurant" class="btn btn-success">Adicionar Restaurante</a>
      </div>
      
      <div class="row justify-content-center">
        <% if (restaurants.length > 0) { %>
          <% for (let i = 0; i < restaurants.length; i++) { %>
            <div class="col-md-3 mb-4 d-flex">
              <div class="restaurant-card w-100">
                <div class="d-flex justify-content-between mb-2">
                  <!-- BotÃ£o de deletar -->
                  <form action="/perfil/admin/listRestaurants/deleteRestaurant/<%= restaurants[i].name %>" method="POST"
                    onsubmit="return confirm('Tem certeza que deseja remover o restaurante <%= restaurants[i].name %>?');">
                    <button class="btn btn-danger btn-sm rounded-circle">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
      
                  <!-- BotÃ£o de editar -->
                  <form action="/perfil/admin/listRestaurants/editRestaurant/<%= restaurants[i]._id %>" method="GET">
                    <button class="btn btn-warning btn-sm rounded-circle">
                      <i class="bi bi-pencil"></i>
                    </button>
                  </form>
                </div>
      
                <!-- Imagem e nome do restaurante -->
                <a href="/perfil/admin/listRestaurants/showRest/<%= restaurants[i]._id %>" class="text-decoration-none">
                  <img src="<%= restaurants[i].perfil.perfilPhoto %>" alt="Logo do restaurante" class="img-fluid rounded">
                  <h5 class="mt-2 text-center"><%= restaurants[i].name %></h5>
                </a>
              </div>
            </div>
          <% } %>
        <% } else { %>
          <p class="text-center">Ainda sem restaurantes</p>
        <% } %>
      </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>