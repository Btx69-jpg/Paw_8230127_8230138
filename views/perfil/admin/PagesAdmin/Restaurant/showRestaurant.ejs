<!DOCTYPE html>
<html lang="pt-PT">
    <head>
        <meta charset="UTF-8" />
        <title>Visualizar Restaurante</title>

        <!-- Icon do site -->
        <link rel="icon" type="image/png" href="/images/Plataform/LogoSite/logo.png" />
        
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

        <!-- CSS -->
        <link rel="stylesheet" href="/stylesheets/Perfils/Admin/PagesAdmin/showMoreInfo.css"/>
    </head>
    <body>
        <main>
            <div class="view-container">
                <h1>Visualizar Restaurante</h1>

                <div class="form-group">
                    <label for="name">Nome</label>
                    <input
                    type="text"
                    id="name"
                    class="form-control"
                    value="<%= restaurant.name %>"
                    readonly
                    required
                    />
                </div>

                <% if (restaurant.sigla) { %>
                    <div class="form-group">
                    <label for="sigla">Sigla</label>
                    <input
                        type="text"
                        class="form-control"
                        id="sigla"
                        name="sigla"
                        value="<%= restaurant.sigla %>"
                        readonly
                        required
                    />
                    </div>
                <% } %>

                <div class="form-group">
                    <label for="emailRest">Email</label>
                    <input
                    type="email"
                    class="form-control"
                    id="emailRest"
                    name="emailRest"
                    value="<%= restaurant.perfil.email %>"
                    readonly
                    required
                    />
                </div>

                <div class="form-group">
                    <label for="phoneRest">Telefone</label>
                    <input
                    type="tel"
                    class="form-control"
                    id="phoneRest"
                    name="phoneRest"
                    value="<%= restaurant.perfil.phoneNumber %>"
                    readonly
                    required
                    />
                </div>

                <div class="form-group">
                    <label for="moradaRest">Morada</label>
                    <input
                    type="text"
                    class="form-control"
                    id="moradaRest"
                    name="moradaRest"
                    value="<%= restaurant.address.street %>, <%= restaurant.address.postal_code %>, <%= restaurant.address.city %>"
                    readonly
                    required
                    />
                </div>

                <% if (restaurant.description) { %>
                    <div class="form-group">
                    <label for="description">Descrição</label>
                    <textarea
                        id="description"
                        name="description"
                        class="form-control"
                        readonly
                        required
                    ><%= restaurant.description %></textarea>
                    </div>
                <% } %>

                <% if (owners.length > 0) { %>
                    <h2>Donos do Restaurante</h2>
                    <p>Total de donos: <%= owners.length %></p>
                    <% owners.forEach(owner => { %>
                        <h3 class="mt-4"><%= owner.firstName %> <%= owner.lastName %></h3>

                        <div class="form-group">
                            <label for="owner-email">Email</label>
                            <input
                            type="email"
                            id="owner-email"
                            class="form-control"
                            value="<%= owner.perfil.email %>"
                            readonly
                            required
                            />
                        </div>

                        <div class="form-group">
                            <label for="owner-phone">Telefone</label>
                            <input
                            type="tel"
                            id="owner-phone"
                            class="form-control"
                            value="<%= owner.perfil.phoneNumber %>"
                            readonly
                            required
                            />
                        </div>
                    <% }) %>
                <% } %>

                <div class="d-grid gap-2">
                    <a href="/perfil/admin/listRestaurants" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </main>

        <!-- Bootstrap JS Bundle -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
