<!DOCTYPE html>
<html lang="pt-PT">
<head>
  <meta charset="UTF-8" />
  <link rel="icon" type="image/png" href="/images/Plataform/LogoSite/logo.png" />
  <title>Sign up</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
    body {
      background-color: #f5f5f5;
      font-family: sans-serif;
    }
    main {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }
    .signup-container {
      /* Utiliza dimensões relativas para maior adaptabilidade */
      width: 90vw;
      max-width: 50vw;
      margin: 10vh auto;
      background-color: #fff;
      padding: 5vh 5vw;
      border-radius: 2vh;
      box-shadow: 0 1vh 2vh rgba(0,0,0,0.1);
    }
    h1 {
      margin-bottom: 2vh;
      text-align: center;
    }
    form {
      display: flex;
      flex-direction: column;
    }
    .form-group {
      margin-bottom: 2vh;
    }
    .form-group label {
      font-weight: 600;
      margin-bottom: 0.5vh;
    }
    .form-group input {
      padding: 1vh 1vw;
      border: 1px solid #ccc;
      border-radius: 1vh;
      font-size: 1rem;
    }
    .terms-group {
      display: flex;
      align-items: center;
      margin-bottom: 2vh;
    }
    .terms-group input[type="checkbox"] {
      margin-right: 1vw;
    }
    .terms-group a {
      color: #3f51b5;
      text-decoration: none;
    }
    .terms-group a:hover {
      text-decoration: underline;
    }
    button[type="submit"] {
      background-color: #5865F2;
      color: #fff;
      padding: 1vh 0;
      font-size: 1rem;
      border: none;
      border-radius: 1vh;
      cursor: pointer;
      margin-bottom: 2vh;
    }
    button[type="submit"]:hover {
      background-color: #4b57d7;
    }
    .divider {
      text-align: center;
      margin: 3vh 0;
      position: relative;
    }
    .divider span {
      background-color: #fff;
      padding: 0 2vw;
      position: relative;
      z-index: 1;
    }
    .divider::before {
      content: "";
      display: block;
      width: 100%;
      height: 0.5vh;
      background: #ccc;
      position: absolute;
      top: 50%;
      left: 0;
      z-index: 0;
    }
    .social-login {
      display: flex;
      justify-content: space-around;
      margin-bottom: 2vh;
    }
    .social-login a {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 6vw;
      height: 6vw;
      border-radius: 50%;
      background-color: #eee;
      transition: background-color 0.3s;
    }
    .social-login a:hover {
      background-color: #ddd;
    }
    .social-login img {
      width: 3vw;
      height: 3vw;
    }
    p {
      text-align: center;
    }
    p a {
      color: #3f51b5;
      text-decoration: none;
    }
    p a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <main>
    <div class="signup-container">
      <!-- nav bar-->
      <%- include('../navBar.ejs') %>

      <h1>Sign up</h1>
      <!-- Formulário de cadastro -->
      <form action="/signUp" method="POST" id="signupForm" class="needs-validation" novalidate>
        <div class="form-group">
          <label for="firstName">First name</label>
          <input 
            type="text" 
            name="firstName" 
            id="firstName" 
            class="form-control" 
            placeholder="Input first name" 
            value="<%= typeof firstName !== 'undefined' ? firstName : '' %>"
            required
            pattern="^[A-Za-zÀ-ÿ\s]+$"
            oninvalid="handleInvalidInput(this)"
            oninput="this.setCustomValidity('')"
          />
          <div class="invalid-feedback">
            O nome deve conter apenas letras e espaços, e não pode estar vazio.
          </div>
        </div>

        <div class="form-group">
          <label for="lastName">Last name</label>
          <input 
            type="text" 
            name="lastName" 
            id="lastName" 
            class="form-control" 
            placeholder="Input last name" 
            value="<%= typeof lastName !== 'undefined' ? lastName : '' %>" 
            required
            pattern="^[A-Za-zÀ-ÿ\s]+$"
            oninvalid="handleInvalidInput(this)"
            oninput="this.setCustomValidity('')"
          />
          <div class="invalid-feedback">
            O nome deve conter apenas letras e espaços, e não pode estar vazio.
          </div>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input 
            type="email" 
            name="email" 
            id="email" 
            class="form-control" 
            placeholder="example@gmail.com" 
            value="<%= typeof email !== 'undefined' ? email : '' %>" 
            required
          />
          <div class="invalid-feedback">
            O email deve ser válido e não pode estar vazio. Exemplo: example@gmail.com
          </div>
        </div>

        <div class="form-group">
          <label for="phoneNumber">Telefone:</label>
          <input type="tel" 
          name="phoneNumber" 
          id="phoneNumber" 
          class="form-control" 
          placeholder="Introduza o número telefónico"  
          pattern="[0-9]{9}" 
          title="O telefone deve ter 9 dígitos"
          required>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input 
            type="password" 
            name="password" 
            id="password" 
            class="form-control" 
            placeholder="Enter at least 8+ characters"
            value="<%= typeof password !== 'undefined' ? password : '' %>"
            minlength="8" 
            required
          />
          <div class="invalid-feedback">
            A senha deve ter pelo menos 8 caracteres e não pode estar vazia.
          </div>
        </div>

        <div class="form-group">
          <label for="confirmPassword">Repeat password</label>
          <input 
            type="password" 
            name="confirmPassword" 
            id="confirmPassword" 
            class="form-control" 
            placeholder="Enter at least 8+ characters"
            value="<%= typeof confirmPassword !== 'undefined' ? confirmPassword : '' %>"
            minlength="8" 
            required
            oninput="validatePassword()"
          />
          <div class="invalid-feedback">
            As senhas não são iguais.
          </div>
        </div>

        <div class="terms-group">
          <input 
            type="checkbox" 
            name="terms" 
            id="terms" 
            required
          />
          <label for="terms">
            By signing up, I agree with the 
            <a href="#">Terms of Use</a> & 
            <a href="#">Privacy Policy</a>
          </label>
          <div class="invalid-feedback">
            Deve aceitar os termos de Uso e privacidade para continuar.
          </div>
        </div>


        <button type="submit">Sign up</button>
      </form>

      <p>Already have an account? <a href="/login">Log in</a></p>

      <div class="divider">
        <span>OR</span>
      </div>

      <div class="social-login">
        <a href="/auth/google"><img src="/images/Plataform/LogosLogin/google.png" alt="Google" /></a>
        <a href="/auth/facebook"><img src="/images/Plataform/LogosLogin/facebook.png" alt="Facebook" /></a>
        <a href="/auth/Apple"><img src="/images/Plataform/LogosLogin/apple.png" alt="Apple" /></a>
      </div>
    </div>
  </main>
  <!-- Bootstrap JS Bundle (opcional para funcionalidades JS do Bootstrap) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Função para validar se as senhas são iguais
    function validatePassword() {
      var password = document.getElementById('password');
      var confirmPassword = document.getElementById('confirmPassword');
  
      if (confirmPassword.value !== password.value) {
        // Define mensagem customizada se não forem iguais
        confirmPassword.setCustomValidity('As senhas não coincidem.');
      } else {
        // Remove a mensagem se forem iguais
        confirmPassword.setCustomValidity('');
      }
    }

    (function () {
    'use strict';
    var form = document.getElementById('signupForm');

    form.addEventListener('submit', function (event) {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add('was-validated');
    }, false);
  })();

    function handleInvalidInput(input) {
    if (!input.value) {
      input.setCustomValidity('Campo obrigatório!');
    } else {
      input.setCustomValidity('Por favor, insira apenas letras e espaços.');
    }
  }
  </script>
</body>
</html>
