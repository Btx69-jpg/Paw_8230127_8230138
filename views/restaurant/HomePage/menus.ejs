<div class="row">
    <div class="col-12">
      <h1 class="mb-4">Menus</h1>
    </div>
</div>
  
<div class="row justify-content-center">
    <form action="/restaurant/menu" method="get">
        <div>
            <label for="mameMenu">Nome menu:</label>
            <input type="text" 
                name="mameMenu" 
                id="mameMenu" 
                placeholder="Nome do menu"
                maxlength="50"
                pattern="[A-Za-z\s]*">
        </div>

        <div>
            <label for="numDish">Numero de pratos</label>
            <input type="number"
                name="numDish" 
                id="numDish" 
                placeholder="Numero de pratos"
                min="1"
                max="10">
        </div>

        <div>
            <!-- Depois trocar para um selecion, que carrega todos os tipos-->
            <label for="category">Categoria do menu</label>
            <input type="text"
                name="category" 
                id="category" 
                placeholder="Categoria do menu"
                maxlength="50"
                pattern="[A-Za-z\s]*">
        </div>

        <div>
            <button><a href="/restaurant">Clear</a></button> <!-- Limpa o filtro-->
            <button type="submit">Submeter</button>
        </div>
    </form>
</div>
