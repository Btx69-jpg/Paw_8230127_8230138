<!DOCTYPE html>
<html lang="pt-PT">
  <head>
    <meta charset="UTF-8">
    <title>Meu Delivery - Home</title>
    <link rel="icon" type="image/png" href="/images/Plataform/LogoSite/logo.png" />
    
    <!-- Link da fonte -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/homePage.css">
    <link rel="stylesheet" href="/stylesheets/sinoNavBar.css">
  </head>
  <body>

    <%- include('navBar.ejs') %>
    <section class="hero">
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <h1>Descubra as melhores opções de entrega</h1>
        <form class="search-bar d-flex" action="/search" method="GET">
          <input id="restaurantName" name="restaurantName" class="form-control ms-5 me-2" type="search" placeholder="Buscar restaurantes ou pratos..." aria-label="Search" name="q" required>
          <button class="btn btn-primary" type="submit" id="OrangeButton">Buscar</button>
        </form>
              <!--Botão que direciona para ver todos os restaurantes-->
          <a href="/restaurants" class="btn btn-primary" id="moreRestaurants">Ver todos os restaurantes</a>
      </div>
    </section>


    <section class="featured container">
      <%- include('Home/recomendacoes.ejs', { restaurants: restaurants })%>
    </section>

    <section>
      <%- include('Home/infoClickEeat.ejs') %>
    </section>

    <section class="featured container">
      <%- include('Home/junte_se.ejs') %>
    </section>

    <!-- rodape -->
    <footer class="footer">
      <p>&copy; 2025 Click&Eat. Todos os direitos reservados.</p>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <div id="user-data" data-user="<%= JSON.stringify(user) %>"></div>
    <!-- Toast de Nova Ordem -->
    <div
      class="toast-container position-fixed top-0 end-0 p-3"
      style="z-index: 9999"
    >
      <div
        id="newOrderToast"
        class="toast align-items-center text-bg-success border-0"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="d-flex">
          <div class="toast-body">Nova ordem recebida!</div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
    </div>

    <!-- Socket.IO -->

    <script src="/socket.io/socket.io.js"></script>
    <script src="/javascripts/RestaurantToast.js"></script>
  </body>
</html>