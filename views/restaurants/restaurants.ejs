<!DOCTYPE html>
<html lang="pt-PT">
<head>
  <meta charset="UTF-8">
  <title>Restaurantes</title>

  <!-- Logo do site-->
  <link rel="icon" type="image/png" href="/images/Plataform/LogoSite/logo.png"/>
  <!-- Bootstrap CSS (versÃ£o 5) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- CSS customizado -->
  <link rel="stylesheet" href="/stylesheets/Restaurants/navBar.css">
  <link rel="stylesheet" href="/stylesheets/Restaurants/restaurantsPage.css">


</head>
<body>
  <%- include('../navBar') %>
  <div class="container">
    <h1>Restaurantes</h1>
    <div class="add-restaurant">
      <a href="/restaurants/createRestaurant" class="btn btn-success">Adicionar Restaurante</a>
    </div>
    
    <% if (restaurants.length > 0) { %>
      <div class="row justify-content-center">
        <% for(let i = 0; i < restaurants.length; i++) { %>
          <div class="col-md-4">
            <div class="restaurant-card text-center">
              <h5 class="mb-3"><%= restaurants[i].name %></h5>
              <img src="<%=restaurants[i].perfil.perfilPhoto%>" alt="Logo do restaurante">

              <div class="btn-group d-flex justify-content-center">
                <form action="/restaurants/deleteRestaurant/<%= restaurants[i].name %>" method="POST">
                  <button type="submit" class="btn btn-danger">Remover</button>
                </form>
                <form action="/restaurants/editRestaurant/<%= restaurants[i]._id %>" method="GET">
                  <button type="submit" class="btn btn-primary">Editar</button>
                </form>
              </div>
              <p class="mt-3">
                <a href="/restaurants/<%= restaurants[i].name %>" class="text-decoration-none">Mais Info.</a>
              </p>
            </div>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <p class="text-center">Ainda sem restaurantes</p>
    <% } %>
  </div>
  
  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
