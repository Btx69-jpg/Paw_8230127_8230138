<div class="row justify-content-center align-items-center mb-4">
  <form action="<%= action %>" method="get" class="col-md-8 col-lg-6">
    <div class="row g-3 justify-content-center">
      
      <!-- 3 campos de largura 4/12 = 1/3 da linha cada -->
      <div class="col-md-4">
        <label for="name" class="form-label">Nome restaurante:</label>
        <input type="text" 
               name="name" 
               id="name"
               placeholder="Introduza o nome do restaurante"
               class="form-control form-control-sm" 
               maxlength="100" 
               pattern="^(?!.*[\\/]).+$"
               title="O nome não pode conter os caracteres '/' ou '\'​"
               value="<%= filters.name %>">
      </div>

      <div class="col-md-4">
        <label for="city" class="form-label">Cidade:</label>
        <input type="text" 
               name="city" 
               id="city" 
               class="form-control form-control-sm" 
               placeholder="Introduza o nome da sua cidade"
               maxlength="100" 
               pattern="^[A-Za-zÀ-ÿ\s]+$"
               title="Apenas letras e espaços"
               value="<%= filters.city %>">
      </div>

      <div class="col-md-4">
        <label for="order" class="form-label">Ordenação:</label>
        <select name="order" id="order" class="form-select form-select-sm">
          <option value="no" <%= filters.order === "no" ? 'selected' : '' %>>- Selecione uma Opção -</option>
          <option value="nameAsc" <%= filters.order === "nameAsc" ? 'selected' : '' %>>Nome (A-Z)</option>
          <option value="nameDesc" <%= filters.order === "nameDesc" ? 'selected' : '' %>>Nome (Z-A)</option>
        </select>
      </div>

      <!-- botões continuam ocupando toda a largura -->
      <div class="col-12 d-flex justify-content-center gap-2 mt-3">
        <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
        <a href="<%= clear %>" class="btn btn-secondary btn-sm">Clear</a>
      </div>
      
    </div>
  </form>
</div>