<!DOCTYPE html>
<html lang="pt-PT">
<head>
    <meta charset="UTF-8">
    <title>Comentários do Restaurante</title>
    <link rel="icon" type="image/png" href="/images/Plataform/LogoSite/logo.png">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/sinoNavBar.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container py-4">
        <!-- NavBar -->
        <%- include('../../navBar.ejs') %>

        <div class="mt-4">
            <h1><i class="bi bi-chat-dots"></i> Comentários</h1>
            <% if (orders && orders.length) { %>
                <% orders.forEach(function(order) { %>
                    <% if (order.comment) { %>
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <h5 class="card-title mb-0">
                                            <i class="bi bi-person-circle me-1"></i>
                                            <%= order.client.firstName %> <%= order.client.lastName %>
                                        </h5>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar-event me-1"></i>
                                            <%= new Date(order.comment.date).toLocaleDateString('pt-PT') %>
                                        </small>
                                    </div>
                                </div>
                                <p class="card-text">
                                    <i class="bi bi-chat-left-text me-1"></i>
                                    <%= order.comment.text %>
                                </p>
                                <% if (order.comment.images && order.comment.images.length) { %>
                                    <div class="row">
                                        <% order.comment.images.forEach(function(imgUrl) { %>
                                            <div class="col-md-3 mb-3">
                                                <img src="<%= imgUrl %>" alt="Comentário imagem" class="img-fluid rounded shadow-sm">
                                            </div>
                                        <% }); %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                <% }); %>
            <% } else { %>
                <p class="text-muted"><i class="bi bi-info-circle"></i> Ainda não existem comentários para este restaurante.</p>
            <% } %>
            <a href="<%= voltar %>" class="btn btn-secondary mt-3">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar
            </a>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>
</html>
