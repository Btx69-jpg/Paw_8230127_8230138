<div class="row bg-light p-3 rounded shadow-sm mb-3">
  <div class="col-12 position-relative">
    <a href="/restaurants" class="btn btn-secondary rounded-circle btn-sm">
      <i class="bi bi-arrow-left"></i>
    </a>
    <h2 class="section-title mb-0 text-center"><%= restaurant.name %></h2>
    <% if (autEdit) { %>
      <form 
        action="/restaurants/<%= restaurant.name %>/editDados/<%= restaurant._id %>" 
        method="GET" 
        class="position-absolute top-0 end-0"
      >
        <button class="btn btn-warning btn-sm rounded-circle">
          <i class="bi bi-pencil"></i>
        </button>
      </form>
    <% } %>
  </div>

  <!-- Descrição -->
  <div class="col-12 mb-3">
    <p class="text-muted text-justify" style="font-size: 0.95rem;">
      <strong>Descrição:</strong> <%= restaurant.description || '-' %>
    </p>
  </div>

  <!-- Contactos e Morada -->
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-telephone"></i> <strong>Telefone:</strong> <%= restaurant.perfil.phoneNumber %></p>
  </div>
  
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-envelope"></i> <strong>Email:</strong> <%= restaurant.perfil.email %></p>
  </div>
  
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-geo-alt"></i> <strong>Morada:</strong> <%= restaurant.address.street %></p>
  </div>
  
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-building"></i> <strong>Cidade:</strong> <%= restaurant.address.city %></p>
  </div>
  
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-mailbox"></i> <strong>Código Postal:</strong> <%= restaurant.address.postal_code %></p>
  </div>

  <!-- Parâmetros operacionais -->
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-basket"></i> <strong>Máx. encomendas/cliente:</strong> <%= restaurant.maxOrdersPerClient %></p>
  </div>
  
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-geo-alt-fill"></i> <strong>Raio máx. entrega (km):</strong> <%= restaurant.maximumRadiusDelivery.toFixed(2) %></p>
  </div>
  
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-clock-history"></i> <strong>Tempo confeção (min):</strong> <%= restaurant.timeConfection %></p>
  </div>

  <!-- Tempos e horários -->
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-truck"></i> <strong>Tempo entrega (min):</strong> <%= restaurant.timeDelivery %></p>
  </div>
  
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-door-open"></i> <strong>Abertura:</strong>
      <%= new Date(restaurant.openingTime * 1000).toISOString().substr(11, 5) %>
    </p>
  </div>
  
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-door-closed"></i> <strong>Fecho:</strong>
      <%= new Date(restaurant.closingTime * 1000).toISOString().substr(11, 5) %>
    </p>
  </div>

<div class="col-12 mt-4">
  <h5 class="text-secondary mb-2">
    <i class="bi bi-geo me-1"></i>Localização no Mapa
  </h5>
  <div class="rounded overflow-hidden border shadow-sm">
    <!-- Proporção 1/3 da largura -->
    <div class="ratio" style="--bs-aspect-ratio: 33%;">
      <iframe
        src="https://www.google.com/maps?q=<%= encodeURIComponent(restaurant.address.street + ', ' + restaurant.address.postal_code + ' ' + restaurant.address.city) %>&output=embed"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </div>

  <!-- Link externo para abrir no Google Maps -->
  <a
    class="btn btn-outline-primary btn-sm mt-2"
    href="https://www.google.com/maps/search/?api=1&query=<%= encodeURIComponent(restaurant.address.street + ', ' + restaurant.address.postal_code + ' ' + restaurant.address.city) %>"
    target="_blank"
  >
    <i class="bi bi-box-arrow-up-right me-1"></i>
    Ver no Google Maps
  </a>
</div>

</div>