<div class="row bg-light p-3 rounded shadow-sm mb-3">
  <div class="col-12 position-relative">
    <a href="/restaurants" class="btn btn-secondary rounded-circle btn-sm">
      <i class="bi bi-arrow-left"></i>
    </a>
    <h2 class="section-title mb-0 text-center"><%= restaurant.name %></h2>
    <% if (autEdit) { %>
      <form 
        action="/restaurants/<%= restaurant.name %>/editDados/<%= restaurant._id %>" 
        method="GET" 
        class="position-absolute top-0 end-0"
      >
        <button class="btn btn-warning btn-sm rounded-circle">
          <i class="bi bi-pencil"></i>
        </button>
      </form>
    <% } %>
  </div>

  <div class="col-12 mb-3">
    <p class="text-muted text-justify" style="font-size: 0.95rem;">
      <strong>Descrição:</strong> <%= restaurant.description %>
    </p>
  </div>

  <div class="col-md-4 mb-2">
    <p><i class="bi bi-telephone"></i> <strong>Telefone:</strong> <%= restaurant.perfil.phoneNumber %></p>
  </div>
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-envelope"></i> <strong>Email:</strong> <%= restaurant.perfil.email %></p>
  </div>
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-geo-alt"></i> <strong>Morada:</strong> <%= restaurant.address.street %></p>
  </div>
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-building"></i> <strong>Cidade:</strong> <%= restaurant.address.city %></p>
  </div>
  <div class="col-md-4 mb-2">
    <p><i class="bi bi-mailbox"></i> <strong>Código Postal:</strong> <%= restaurant.address.postal_code %></p>
  </div>
</div>