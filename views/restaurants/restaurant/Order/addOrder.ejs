<!DOCTYPE html>
<html lang="pt-PT">
  <head>
    <meta charset="UTF-8"/>
    <title>Criar Encomenda</title>
    <link rel="icon" href="/images/Plataform/LogoSite/logo.png" />

    <!-- Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    
    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/Perfils/btnEdits.css">
  </head>
  
  <body>
    <%- include('../navBarRest') %>
    <%- include('../../../hero', { title: 'Gestão de Pedidos', content: 'Aqui pode gerir os pedidos dos seus clientes.' }) %>
    
    <% if(restaurant.perfil) { %>
      <div class="container my-4">
        <div class="row">
          <% if(restaurant.perfil.historicOrders && restaurant.perfil.historicOrders.length > 0) { %>
            <div class="col-auto me-3">
              <form action="/restaurants/<%= restaurant.name %>/orders/historic" method="GET">
                <button type="submit" class="custom-btn">Histórico de encomendas</button>
              </form>
            </div>
          <% } %>
          <% if(restaurant.perfil.orders && restaurant.perfil.orders.length > 0) { %>
            <div class="col-auto">
              <form action="/restaurants/<%= restaurant.name %>/orders/orderManagement" method="GET">
                <button type="submit" class="custom-btn">Gerir encomendas</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>    
    <% } %>

    <%- include('createOrder', {menus: restaurant.menus}) %>

  </body>
</html>

