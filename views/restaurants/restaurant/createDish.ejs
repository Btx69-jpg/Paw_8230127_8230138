    <body>
        <div class="container">
            <div class="row-md-6">
                <h1>Criar dish</h1>
            </div>

            <div class="row-md-6">
                <!-- Dá reload para o create ou volta para a lista?-->
                <form action="" method="post" enctype="multipart/form-data">
                    <div class="row-md-6">
                        <label for="name">Nome:</label>
                        <input type="text" 
                        name="name" 
                        id="name" 
                        placeholder="Nome do prato" 
                        pattern="^[a-zA-Z\s]*$"
                        maxlength="50"
                        required>
                    </div>

                    <div class="row-md-6">
                        <label for="description">Descrição:</label>
                        <input type="text" 
                        name="description" 
                        id="description" 
                        placeholder="Descrição do prato" 
                        maxlength="250"
                        required>
                    </div>

                    <div class="row-md-6">
                        <!-- Mudar para selecion box, carregada com todas as categorias-->
                        <label for="category">Categoria</label>
                        <input type="text"
                        name="category"
                        id="category"
                        placeholder="Categoria do prato"
                        pattern="^[a-zA-Z\s]*$"
                        required>
                    </div>

                    <div class="row-md-6">
                        <label for="price">Preço:</label>
                        <input type="number" 
                        name="price" 
                        id="price" 
                        placeholder="Preço do prato" 
                        min="0"
                        required>
                    </div>

                    <div class="row-md-6">
                        <div class="row-md-6">
                            <label for="photo">Foto do prato</label>
                        </div>

                        <div class="row-md-6">
                            <input type="file" 
                            accept="image/*"
                            name="photo" 
                            id="photo">
                        </div>    
                    </div>

                    <div class="row-md-6">
                        <!-- Depois mudar o restaurant e menu para as variaveis-->
                        <!-- Mudar o nome do link, do restaurant e menu, para o nome das variaveis-->
                        <button><a href="/restaurants/restaurant/menu">Voltar</a></button>
                        <button><a href="/restaurants/restaurant/menu/createDish">Clear</a></button> <!-- Limpa o filtro-->
                        <button type="submit">Submeter</button>
                        
                    </div>

                </form>
            </div>
            
        </div>

        

