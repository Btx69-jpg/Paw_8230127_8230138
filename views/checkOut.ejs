<!DOCTYPE html>
<html lang="pt-PT">
  <head>
    <meta charset="UTF-8" />
    <title>Carrinho de Compras</title>
    <!-- Logo -->
    <link rel="icon" type="image/png" href="../public/images/logo.png" />

    <!-- Link da fonte -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;700&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>

    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/checkOut.css">
  </head>
  <body class="bg-light">
    <%- include('navBar') %>

    <div class="container py-4">
      <h1 class="mb-4">Carrinho de Compras</h1>
      
      <!-- Verifica se o carrinho existe e tem itens -->
      <% if (cart && cart.items && cart.items.length > 0) { %>
        <!-- Exibir total de itens -->
        <div class="mb-3">
          <strong>TOTAL (x Items): <%= cart.items.length %></strong>
        </div>

        <div class="row">
          <!-- Coluna esquerda: Lista de produtos -->
          <div class="col-md-8 mb-4">
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0">Produtos no Carrinho</h5>
              </div>
              <div class="card-body">
                <table class="table align-middle">
                  <thead>
                    <tr>
                      <th>Artigo</th>
                      <th>Descrição</th>
                      <th>Preço</th>
                      <th>Qtd</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% cart.items.forEach(function(item) { %>
                      <tr>
                        <td><%= item.name %></td>
                        <td><%= item.description %></td>
                        <td>€ <%= item.price.toFixed(2) %></td>
                        <td>
                          <!-- Exemplo de input para alterar quantidade -->
                          <input
                            type="number"
                            class="form-control form-control-sm"
                            value="<%= item.quantity %>"
                            min="1"
                            style="width: 60px;"
                          />
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>

                <!-- Botão para continuar comprando (ALTERAR PARA VOLTAR A PAGINA QUE O USUARIO ESTAVA ANTERIORMENTE!) -->
                <a href="/" class="btn btn-secondary">Continuar a Comprar</a>
                
                <!-- Botão para limpar carrinho -->
                <a href="/carrinho/limpar" class="btn btn-outline-danger"> Limpar Carrinho </a>
              </div>
            </div>
          </div>

          <!-- Coluna direita: Resumo do pedido -->
          <div class="col-md-4">
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0">Resumo</h5>
              </div>

              <div class="card-body">
                <!-- Exemplo de cálculo simples de subtotal e IVA -->
                <p class="mb-2">
                  <strong>Produtos:</strong> 
                  <span class="float-end">€ <%= cart.subtotal.toFixed(2) %></span>
                </p>

                <p class="mb-2">
                  <strong>IVA (23%):</strong> 
                  <span class="float-end">
                    € <%= (cart.subtotal * 0.23).toFixed(2) %>
                  </span>
                </p>

                <hr />

                <p class="mb-2">
                  <strong>Total:</strong> 
                  <span class="float-end">
                    € <%= (cart.subtotal * 1.23).toFixed(2) %>
                  </span>
                </p>

                <div class="mb-3">
                  <label for="cupom" class="form-label">Aplicar cupom</label>
                  <input
                    type="text"
                    class="form-control"
                    id="cupom"
                    placeholder="Insira seu cupom"
                  />
                </div>

                <a href="/checkout" class="btn btn-primary w-100" id="OrangeButton">
                  Avançar para o Checkout
                </a>
              </div>
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="alert alert-info">
          Não há itens no carrinho no momento.
        </div>
        <a href="<%= previousPage %>" class="btn btn-primary" id="OrangeButton">Voltar aos Produtos</a>
      <% } %>
    </div>

    <!-- Bootstrap JS (opcional, para componentes dinâmicos) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>